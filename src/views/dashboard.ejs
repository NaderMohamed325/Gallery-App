<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="bg-white p-8 rounded-xl shadow-lg w-full max-w-5xl">
      <!-- Dashboard Title -->
      <h2 class="text-3xl font-bold text-center text-gray-800">Dashboard</h2>
      <p class="text-center text-gray-600 text-sm mt-2">Welcome to your dashboard!</p>
      
      <!-- Form to upload photo -->
      <div class="mt-6">
        <form action="/api/v1/upload" method="POST" enctype="multipart/form-data" class="flex flex-col md:flex-row items-center gap-4">
          <input type="file" name="photo" class="w-full md:w-auto p-2 border border-gray-300 rounded focus:ring-2 focus:ring-blue-400" required />
          <button type="submit" class="bg-blue-500 text-white px-6 py-2 rounded hover:bg-blue-600 transition duration-300">
            Upload Photo
          </button>
        </form>
      </div>

      <!-- Display uploaded images -->
      <div class="mt-8">
        <h3 class="text-xl font-bold text-center">Uploaded Images</h3>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 mt-4">
          <% images.forEach(image => { %>
            <div class="bg-white p-2 shadow-md rounded-lg overflow-hidden">
              <img src="<%= image.url %>" alt="Uploaded Image" class="w-full h-40 object-cover rounded">
            </div>
          <% }); %>
        </div>
      

      <!-- Logout button -->
      <div class="mt-8 text-center">
        <form action="/api/v1/logout" method="POST">
          <button type="submit" class="bg-red-500 text-white px-6 py-2 rounded hover:bg-red-600 transition duration-300">
            Logout
          </button>
        </form>
      </div>
    </div>
  </body>
</html>
